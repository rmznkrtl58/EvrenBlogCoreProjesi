@model CoreBlogProject.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Kayıt Ol</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/adminweb/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/adminweb/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/adminweb/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="#"><b>Asp.Net Core 5.0</b> Register</a>
        </div>
        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg" style="color:red;font-size:20px">Oturum Açmak İçin Kayıt Olun!</p>

                <form  method="post">
                     <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="userName" placeholder="Kullanıcı Adınız">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" asp-for="nameSurname" placeholder="Adınız Soyadınız">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" asp-for="mail" placeholder="E-posta Adresiniz">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                   
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="writerPassword" placeholder="Şifreniz">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" asp-for="confirmPassword" placeholder="Şifre Tekrar">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextAreaFor(x => x.writerImageUrl, new { @class = "form-control", @Rows = 1, @placeholder = "Resim Url" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextAreaFor(x => x.writerStatus, new { @class = "form-control", @Rows = 2, @placeholder = "Mesleğiniz" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextAreaFor(x => x.writerAddress, new { @class = "form-control", @Rows = 2, @placeholder = "Adresiniz" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextAreaFor(x => x.writerDescription, new { @class = "form-control", @Rows = 4, @placeholder = "Açıklamalarınız" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <button style="margin-left:105px" type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                        </div>
                    </div>
                </form>
                <br />
                <p class="mb-1">
                    <a href="/Login/Index/">Hesabınız varsa Giriş Yapınız</a>
                   <br />
                    <a href="/Showcase/Default/Index/" style="color:orangered">Vitrin Paneline Gider</a>

                </p>
            </div>
        </div>
    </div>
    <script src="~/adminweb/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminweb/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminweb/dist/js/adminlte.min.js"></script>
</body>
</html>

