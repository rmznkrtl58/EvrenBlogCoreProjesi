@model Announcement
@{
    ViewData["Title"] = "ContentAnnouncement";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="col-md-12">
    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">İçerik:</h3>
        </div>
        <form role="form" method="get">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Konu: @Model.Subject</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description" id="exampleInputEmail1" placeholder="Açıklama" readonly>
                </div>
            </div>
        </form>
    </div>
</div>

