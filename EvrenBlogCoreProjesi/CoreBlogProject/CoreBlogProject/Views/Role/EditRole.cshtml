@model RoleUpdateViewModel
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="col-md-12">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Role Güncelleme Paneli</h3>
        </div>
        <form role="form" method="post">
            @Html.HiddenFor(x=>x.roleId)
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Rol Adı:</label>
                    <input type="text" class="form-control"asp-for="roleName" id="exampleInputEmail1" placeholder="Rol">
                    <div>
                        <button style="margin-top:8px" class="btn btn-success">Güncelle</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

