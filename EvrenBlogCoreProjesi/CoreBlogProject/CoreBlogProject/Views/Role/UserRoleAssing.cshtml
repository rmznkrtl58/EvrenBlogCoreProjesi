@model List<UserAssingRoleViewModel>
@{
    ViewData["Title"] = "UserRoleAssing";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<form method="post" class="form-group" >
    @for(int i = 0; i < Model.Count; i++)
    {
        <div style="margin-left:15px" class="form-check">
            <input type="hidden" asp-for="@Model[i].roleId"  />
            <input type="hidden" asp-for="@Model[i].roleName"  />
            <input type="checkbox" asp-for="@Model[i].exists" class="form-check-input"/>
            @*EXİSTS'ten gelen true false durumuna göre işaretli gelecek*@
            <label class="form-check-label" for="@Model[i].exists">@Model[i].roleName</label>
            @*form-check-label'da her bir checkbox için oluşan tanımlayıcı isimlendirmelerdir.*@
            @*for="@Model[i].exists"->for neye göre niçin exists'daki cevaba göre label getir*@
        </div>
    }
    <button style="margin-left:15px;margin-top:8px" class="btn btn-outline-success">Atama Yap</button>
</form>


