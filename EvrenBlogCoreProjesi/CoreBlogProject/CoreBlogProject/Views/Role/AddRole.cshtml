@model RoleViewModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="col-md-12">
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Role Ekleme Paneli</h3>
        </div>
        <form role="form" method="post">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Rol Adı:</label>
                    <input type="text" class="form-control" name="roleName" id="exampleInputEmail1" placeholder="Rol">
                    @Html.ValidationMessageFor(x => x.roleName, "", new { @class = "text-danger" })
                    <div>
                        <button style="margin-top:8px" class="btn btn-success">Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




