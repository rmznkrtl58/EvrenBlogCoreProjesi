@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Showcase/Views/Shared/_ShowcaseLayout.cshtml";
}
<body class="category-page">
    <main class="main">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <section id="blog-posts" class="blog-posts section">
                        <div class="container">
                            <div class="row gy-4">
                                @foreach(var x in Model){
                                <div class="col-lg-6">
                                    <article class="position-relative h-100">
                                        <div class="post-img position-relative overflow-hidden">
                                            <img style="width:400px;height:250px" src="@x.BlogImage" class="img-fluid" alt="">
                                            <span class="post-date">December 12</span>
                                        </div>
                                        <div class="post-content d-flex flex-column">

                                            <h3 class="post-title">@x.BlogTitle</h3>

                                            <div class="meta d-flex align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-person"></i> <span class="ps-2">@x.AppUser.NameSurname</span>
                                                </div>
                                                <span class="px-3 text-black-50">/</span>
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-folder2"></i> <span class="ps-2">@x.Category.CategoryName</span>
                                                </div>
                                            </div>

                                            <p>
                                                @x.BlogContent.Substring(0,x.BlogContent.Substring(0,120).LastIndexOf(" "))<a href="#" style="color:red">...</a>
                                            </p>

                                            <hr>

                                            <a href="/Showcase/Blog/BlogDetails/@x.BlogId" class="readmore stretched-link"><span>Read More</span><i class="bi bi-arrow-right"></i></a>
                                        </div>
                                    </article>
                                </div>
                                }
                            </div>
                        </div>
                    </section>
                    <section id="blog-pagination" class="blog-pagination section">

                        <div class="container">
                            <div class="d-flex justify-content-center">
                             
                            </div>
                        </div>

                    </section>
                </div>

                <div class="col-lg-4 sidebar">

                    <div class="widgets-container">

                    
                        @await Component.InvokeAsync("ShowcaseBlogsAdmin")
               
                        <div class="search-widget widget-item">

                            <h3 class="widget-title">Arama Yap</h3>
                            <form action="">
                                <input type="text" placeholder="Aranacak Kelime...">
                                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
                            </form>
                        </div>
                        @await Component.InvokeAsync("ShowcaseBlogsRecentPosts")
                     @await Component.InvokeAsync("ShowcaseBlogsCategorys")
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
