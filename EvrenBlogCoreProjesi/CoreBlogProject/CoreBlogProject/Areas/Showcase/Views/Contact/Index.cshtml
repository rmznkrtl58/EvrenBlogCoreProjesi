@using EntityLayer.Concrete
@model WebContact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Showcase/Views/Shared/_ShowcaseLayout.cshtml";
}
<body class="contact-page">
    <main class="main">
        <section id="contact" class="contact section">
            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="mb-4" data-aos="fade-up" data-aos-delay="200">
                    <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12038.723913627842!2d29.02163825763512!3d41.03223499155077!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab78eb4cc28d7%3A0xd6cc13bd2c633762!2zw5xza8O8ZGFyLCBLdXpndW5jdWssIDM0Njc0IMOcc2vDvGRhci_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1735298986629!5m2!1str!2str" frameborder="0" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <div class="row gy-4">
                   @await Component.InvokeAsync("ShowcaseContact1")
                    <div class="col-lg-8">
                      <form method="post">
                            <div class="row gy-4">
                                <div class="col-md-6">
                                    <input type="text" name="NameSurname" class="form-control" placeholder="Adınız Soyadınız" >
                                    @Html.ValidationMessageFor(x=>x.NameSurname,"",new{@class="text-danger"})
                                </div>
                                <div class="col-md-6 ">
                                     <input type="email" class="form-control" name="Mail" placeholder="E-posta Adresiniz" >
                                    @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })

                                </div>
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="Subject" placeholder="Konu" >
                                    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })

                                </div>
                                <div class="col-md-12">
                                    <textarea class="form-control" name="ContactContent" rows="6" placeholder="Mesajınız" ></textarea>
                                    @Html.ValidationMessageFor(x => x.ContactContent, "", new { @class = "text-danger" })
                                </div>
                                 <br />
                                    <button class="btn btn-primary">Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>