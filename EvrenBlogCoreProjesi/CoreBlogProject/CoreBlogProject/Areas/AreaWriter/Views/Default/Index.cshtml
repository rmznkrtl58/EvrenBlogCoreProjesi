@model UserUpdateViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Profil Bilgilerini Düzenle</h3>
                    </div>
                    <div class="card-body">
                       <form class="form-group" method="post" action="/AreaWriter/Default/Index/" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Ad Soyad:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    @Html.TextBoxFor(x => x.nameSurname, new { @class = "form-control", @placeholder = "Adınız Soyadınız"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kullanıcı Adı:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    @Html.TextBoxFor(x => x.userSurname, new { @class = "form-control", @placeholder = "Kullanıcı Adınız"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label>E-Posta:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    @Html.TextBoxFor(x => x.mail, new { @class = "form-control", @placeholder = "E-Posta Adresiniz" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Şifre:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    @Html.PasswordFor(x => x.password, new { @class = "form-control", @placeholder = "Şifreniz" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Meslek:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    @Html.TextBoxFor(x => x.writerStatus, new { @class = "form-control", @placeholder = "Mesleğiniz" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Adres:</label>

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    @Html.TextBoxFor(x => x.writerAddress, new { @class = "form-control", @placeholder = "Adresiniz" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Resim Seçiniz:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    <input type="file" name="writerImageUrl" class="form-control"  />
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Açıklama:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-info"></i></span>
                                    </div>
                                    @Html.TextAreaFor(x => x.writerDescription, new { @class = "form-control", @placeholder = "Açıklamalarınız" })
                                </div>
                            </div>
                            <button class="btn btn-success">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>
</body>
</html>


